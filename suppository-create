#!/bin/bash
# Creates a simple apt repository suitable for sharing
# via apache etc.

if [ -z "$1" ]; then 
	echo usage: $0 /path/for/new/repository 
	exit 1
fi

if [ -x $1 ]; then
	echo $1 already exists, aborting.
	exit 2
fi

default_dists="natty lucid"
default_archs="i386 amd64"
default_components="main contrib non-free internal"

read -p "Dist names <$default_dists>: " dists
dists=${dists:-$default_dists}

read -p "Architechtures: <$default_archs>: " archs
archs=${archs:-$default_archs}

read -p "Components: <$default_components>: " components
components=${components:-$default_components}

for dist in $dists; do
	for component in $components; do
		for arch in $archs; do
			mkdir -p $1/dists/$dist/$component/binary-$arch
		done
	done
done

touch $1/.suppository
